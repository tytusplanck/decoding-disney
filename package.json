{
  "name": "astro",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "npm run test:all",
    "test:all": "npm run test:unit && npm run build && npm run test:artifacts && npm run test:smoke",
    "test:unit": "vitest run tests/unit",
    "test:artifacts": "vitest run tests/artifacts",
    "test:smoke": "vitest run tests/smoke",
    "check": "astro check",
    "lint": "npm run lint:code && npm run lint:md",
    "lint:code": "eslint .",
    "lint:md": "markdownlint-cli2 \"README.md\" \"src/content/posts/**/*.md\" \".github/**/*.md\"",
    "lint:fix": "npm run lint:code -- --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "verify": "npm run lint && npm run format:check && npm run check && npm run test:all",
    "prepare": "husky",
    "precommit:check": "lint-staged"
  },
  "dependencies": {
    "@astrojs/sitemap": "^3.6.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "astro": "^5.14.1"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/tailwind": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "astro-eslint-parser": "^1.2.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.39.2",
    "eslint-plugin-astro": "^1.5.0",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint-cli2": "^0.20.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,ts,astro}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css}": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write",
      "markdownlint-cli2"
    ]
  }
}
